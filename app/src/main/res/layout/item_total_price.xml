<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/txtview_detail_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:maxWidth="136dp"
        android:layout_marginRight="11dp"
        android:layout_height="wrap_content"
        android:text="BLUSA BRIGITTE NAUX"
        android:layout_marginLeft="19dp" />


    <include
        android:id="@+id/imgview_riplay_card"
        layout="@layout/item_ripley_card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@+id/txtview_ripley_price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:id="@+id/txtview_ripley_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RipleyPriceAccent"
        android:text="$14.990"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18dp"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toLeftOf="@+id/txtview_total_price"/>

    <TextView
        android:id="@+id/txtview_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/RipleySimpleText"
        android:text="$14.990"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>